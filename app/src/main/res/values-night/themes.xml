<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiplomStrava" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="snackbarStyle">@style/snackBar</item>
        <item name="snackbarTextViewStyle">@style/snackBarText</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="iconTint">@color/white</item>
    </style>



    <style name="smallText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">roboto</item>
        <item name="android:textColor">@color/gray_divider</item>
    </style>

    <style name="personForm" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">roboto</item>
    </style>

    <style name="formDropDown" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">15dp</item>
    </style>

    <style name="dropDownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="shapeAppearance">@style/formDropDown</item>
    </style>

    <style name="spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/ic_spinner_background</item>
    </style>

    <style name="progress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/anim_progress</item>
    </style>

    <style name="swipe" parent="">
        <item name="android:indeterminateDrawable">@drawable/anim_progress</item>
    </style>

    <style name="snackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="snackBarText" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/error_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorOnSurface">@color/error_background</item>
    </style>

    <style name="inputTextAddActivity" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="background">@color/white</item>
        <item name="boxStrokeColor">@color/outlinebox_border</item>
    </style>

</resources>